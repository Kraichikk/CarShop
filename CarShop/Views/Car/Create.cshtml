@model CarShop.Models.Car

<h2>Create Car</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Odometer"></label>
        <input asp-for="Odometer" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Transmission"></label>
        <input asp-for="Transmission" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EngineType"></label>
        <input asp-for="EngineType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Condition"></label>
        <input asp-for="Condition" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="InteriorOfCar"></label>
        <input asp-for="InteriorOfCar" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="WheelDrive"></label>
        <input asp-for="WheelDrive" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary">Create</button>
</form>